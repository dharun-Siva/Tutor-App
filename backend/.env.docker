# Backend Environment Configuration for Docker
# This file is used when deploying the backend container

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
MONGO_URI=mongodb://mongodb:27017/tutor1

# PostgreSQL Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=Tutor_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# PostgreSQL Pool Configuration
POSTGRES_POOL_MAX=20
POSTGRES_POOL_MIN=0
POSTGRES_POOL_ACQUIRE=30000
POSTGRES_POOL_IDLE=10000
POSTGRES_CONNECTION_TIMEOUT=2000
POSTGRES_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://:redis123@redis:6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production

# Frontend Configuration
FRONTEND_URL=http://localhost

# CORS Configuration
CORS_ORIGIN_1=http://localhost
CORS_ORIGIN_2=http://localhost:3000
CORS_ORIGIN_3=http://frontend

# Agora Configuration
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
AGORA_CHAT_APP_KEY=your_chat_app_key

# Agora Whiteboard Credentials
WHITEBOARD_APP_ID=your_whiteboard_app_id
WHITEBOARD_APP_SECRET=your_whiteboard_app_secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
ACCOUNT_LOCK_TIME=7200000
MAX_LOGIN_ATTEMPTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
