# Environment Configuration Template
# Copy this to .env and update with your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGO_URI=mongodb://localhost:27017/tutor1

# PostgreSQL Configuration
POSTGRES_URI=postgresql://postgres:password@localhost:5432/Tutor_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=Tutor_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# PostgreSQL Pool Configuration
POSTGRES_POOL_MAX=20
POSTGRES_POOL_MIN=0
POSTGRES_POOL_ACQUIRE=30000
POSTGRES_POOL_IDLE=10000
POSTGRES_CONNECTION_TIMEOUT=2000
POSTGRES_IDLE_TIMEOUT=30000

# Sequelize Configuration
SEQUELIZE_LOGGING=false
SEQUELIZE_POOL_MAX=5
SEQUELIZE_POOL_MIN=0
SEQUELIZE_POOL_ACQUIRE=30000
SEQUELIZE_POOL_IDLE=10000

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_please
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production_please

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# CORS Configuration
CORS_ORIGIN_1=http://localhost:3000
CORS_ORIGIN_2=http://localhost:3001
CORS_ORIGIN_3=http://localhost:3002

# External API URLs
NETLESS_API_URL=https://api.netless.link/v5/rooms
UI_AVATARS_BASE_URL=https://ui-avatars.com/api
UNPKG_REACT_URL=https://unpkg.com/react@18/umd/react.development.js
UNPKG_REACT_DOM_URL=https://unpkg.com/react-dom@18/umd/react-dom.development.js
BABEL_STANDALONE_URL=https://unpkg.com/@babel/standalone/babel.min.js
AGORA_RTC_SDK_URL=https://download.agora.io/sdk/release/AgoraRTC_N-4.20.0.js

# Production Domain (update when deploying)
PRODUCTION_DOMAIN=https://your-domain.com

# Agora Configuration
# Get these values from Agora Console: https://console.agora.io/
AGORA_APP_ID=your_agora_app_id
AGORA_APP_CERTIFICATE=your_agora_app_certificate
AGORA_CHAT_APP_KEY=your_chat_app_key

# Agora Whiteboard Credentials
WHITEBOARD_APP_ID=your_whiteboard_app_id
WHITEBOARD_APP_SECRET=your_whiteboard_app_secret

# Email Configuration (for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
ACCOUNT_LOCK_TIME=7200000
MAX_LOGIN_ATTEMPTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
